<html t:type="layout" title="Tapestry5- Contact Form"
      t:pageTitle="Register"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<h2>Contact Form</h2>

<div class="alert alert-warning">
    Note: this is a demonstration site. Feel free to send email here,
    but please do <em>not</em> enter sensitive information into this form.
</div>

<form class="form-horizontal" t:id="contactForm">
    <t:hidden value="target"/>
    <t:errors/>


    <div class="form-group">
        <label t:type="label" t:for="toEmail" class="col-md-4"/>
        <div class="col-md-8">
            <input t:type="textfield" t:id="toEmail"
                   placeholder="Enter the Sender Email "/>
        </div>
    </div>

    <div class="form-group">
        <label t:type="label" t:for="password" class="col-md-4"/>
        <div class="col-md-8">
            <input t:type="passwordfield" t:id="password"
                   placeholder="Enter the Password of Email "/>
        </div>
    </div>
    <div class="form-group">
        <label t:type="label" t:for="subject" class="col-md-4"/>
        <div class="col-md-8">
            <input t:type="textfield" t:id="subject"
                   placeholder="Enter the Subject "/>
        </div>
    </div>


    <div class="form-group">
        <label t:type="label" t:for="message" class="col-md-4"/>
        <div class="col-md-8">
            <input t:type="textarea" t:id="message"
                   placeholder="Enter the Message "/>
        </div>
    </div>

    <div class="form-group">
        <label t:type="label" t:for="email" class="col-md-4"/>
        <div class="col-md-8">
            <input t:type="textfield" t:id="email"
                   placeholder="Recipient email address"/>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" value="Send" class="btn btn-default"/>
        </div>
    </div>


</form>


</html>
